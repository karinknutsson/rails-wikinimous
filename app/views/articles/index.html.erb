<div class="top-nav">
  <h1>Articles</h1>
  <%= link_to 'New article', new_article_path %>
</div>

<div class="article-container">

<% @articles.each do |article| %>
  <div class="article-preview">
    <%= link_to article.title, article_path(article.id) %>
    <p><%= article.content[0..100] %></p>
  </div>
<% end %>

</div>
