<div class="article-container">

  <% @articles.each do |article| %>
    <div class="article-card">
      <%= link_to article_path(article.id) do %>
        <span class="article-score"><%= article.score.to_s %></span>
        <h4><%= article.title %></h4>
        <p><%= article.content[0..520] %></p>
      <% end %>
    </div>
  <% end %>

</div>
