<div class="top-nav">
  <h1><%= link_to "Wikinimous", index_path %></h1>
  <h3><%= link_to 'New article', new_article_path %></h3>
</div>

<div class="article-container">
  <div class="article-box">
    <h2>
      <%= @article.title %>
      <span style="float: right;">
        <%= link_to image_tag('edit-solid.svg', size: '20'), edit_article_path(@article.id) %>
        <%= link_to image_tag('trash-alt-solid.svg', size: '20'), article_path(@article), method: :delete, data: { confirm: "Are you sure?" }  %>
      </span>
    </h2>
    <p><%= @article.content %></p>
  </div>
</div>
